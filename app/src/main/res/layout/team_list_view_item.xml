<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_height="51dp"
        android:text="TextView"
        android:id="@+id/teamName"
        android:layout_width="242dp"
        app:layout_constraintRight_toRightOf="@+id/overallBar"
        app:layout_constraintLeft_toLeftOf="@+id/overallBar"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/overallBar" />

    <TextView
        android:layout_height="43dp"
        android:text="TextView"
        android:id="@+id/todayPercentage"
        android:layout_width="233dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_height="49dp"
        android:id="@+id/overallPercentage"
        android:text="TextView"
        android:layout_width="258dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/todayBar"
        app:layout_constraintHorizontal_bias="0.54" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_height="35dp"
        android:id="@+id/todayBar"
        android:layout_width="270dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/teamName"
        app:layout_constraintHorizontal_bias="0.47" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_height="31dp"
        android:id="@+id/overallBar"
        android:layout_width="270dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todayPercentage"
        android:layout_marginTop="16dp" />


</android.support.constraint.ConstraintLayout>